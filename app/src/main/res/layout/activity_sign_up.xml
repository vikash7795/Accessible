<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/blue3"
    android:fadingEdge="none"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarSize="0dp"
    android:scrollbars="none"
    android:scrollbarThumbVertical="@null"
    android:scrollbarStyle="insideOverlay">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="#fff"
        android:paddingTop="20dp"
        android:paddingLeft="130dp"
        android:textSize="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/name"

            android:layout_marginTop="70dp"
            android:id="@+id/mobile"
            android:layout_marginRight="10dp"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColorHint="#fff"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#F48FB1">

            <EditText
                android:id="@+id/editTextMobile1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:shadowColor="#fff"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:backgroundTint="#fff"
                />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email1"

                android:layout_marginTop="130dp"
                android:id="@+id/mail1"
                android:layout_marginRight="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F48FB1">

                <EditText
                    android:id="@+id/mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/password1"

                android:layout_marginTop="190dp"
                android:id="@+id/pass1"
                android:layout_marginRight="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F48FB1">

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    />
            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mobile1"

                android:layout_marginTop="250dp"
                android:id="@+id/phonne1"
                android:layout_marginRight="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F48FB1">

                <EditText
                    android:id="@+id/isd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ISD"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="230dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F48FB1">

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>







        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dob"

                android:layout_marginTop="310dp"
                android:id="@+id/date"
                android:layout_marginRight="10dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#F48FB1">

                <EditText
                    android:id="@+id/dateofbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date Of Birth"
                    android:shadowColor="#fff"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:backgroundTint="#fff"
                    />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <RadioGroup android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgGender"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="370dp"
            >
            <RadioButton android:layout_width="wrap_content"
                android:id="@+id/radio0" android:layout_height="wrap_content"
                android:textColor="#fff"
                android:backgroundTint="#fff"
                android:buttonTint="#fff"
                android:layout_weight="1"
                android:text="Male"/>
            <RadioButton android:id="@+id/radioButton1"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:buttonTint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#fff"
                android:text="Female"/>
            <RadioButton android:id="@+id/radioButton2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:buttonTint="#fff"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#fff"
                android:text="@string/transgender"/>
        </RadioGroup>

        </LinearLayout>





        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_signup"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp"
            android:layout_marginBottom="2dp"
            android:textColor="#fff"
            android:background="#1976d2"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:text="@string/create_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already A Member? Login"
            android:textColor="#fff"
            android:layout_marginLeft="80dp"
            android:id="@+id/login"
            android:layout_marginTop="510dp"
            android:textSize="16sp"/>






    </RelativeLayout>
</ScrollView>
